%header.header
  .header__upper
    .grid-container.full-height
      .grid-100.full-height
        %table.header__title
          %tbody
            %tr
              %td.padding-r1
                = image_tag asset_url( 'logo.png' ), :alt => 'Benefit Choices logo', :class => 'logo -small'
              %td
                %h1.heading.-grand.-signature.margin-b0
                  Benefit Choices
        .header__phone
          %span.fa.fa-phone
          %span
            (616) 677-3777
  .header__lower
    .grid-container
      .grid-100
        .header__slogan
          %h2.heading.-small.margin-b0
            When the sale ends, the service begins.
        .header__nav__toggle
          %span.header__nav__link.js-nav-toggle{ 'data-target' => '.header__nav__links' }
            %span.fa.fa-bars
        %ul.header__nav__links
          %li
            = link_to root_path, class: 'header__nav__link js-openable-link' do
              %span
                Home
          %li
            = link_to medicare_path, class: 'header__nav__link js-openable-link' do
              %span
                Medicare
          %li
            = link_to medi_share_path, class: 'header__nav__link js-openable-link' do
              %span
                Medi-Share
          %li
            = link_to new_email_path, class: 'header__nav__link js-openable-link' do
              %span
                Contact Us
