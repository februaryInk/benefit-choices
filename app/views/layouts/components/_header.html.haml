%header.header
  .header__wrapper
    .grid-container
      .grid-100
        .header__title
          %table
            %tbody
              %tr
                %td.padding-r1
                  = image_tag asset_url( 'logo.png' ), :alt => 'Benefit Choices logo', :class => 'logo -small'
                %td
                  %span.heading.-large.-signature.nowrap
                    Benefit Choices
                  %br
                  %span.heading.-small.nowrap
                    When the sale ends, the service begins.
        %nav.header__nav
          %ul
            %li
              = link_to 'Home', root_path, class: 'header__link'
            %li
              = link_to 'Medicare', products_medicare_path, class: 'header__link'
            %li
              = link_to 'Medi-Share', products_medi_share_path, class: 'header__link'
            %li
              = link_to 'Contact Us', contact_us_path, class: 'header__link'
